
@page "/operacionesdata"
@using OperacionesArit.Data

<h1>Operaciones Aritmetica</h1>
<EditForm Model="Operaciones" OnValidSubmit="Suma">
    <DataAnnotationsValidator/>
    <ValidationSummary/>
    <div class="form-group">
        <p class="PrimerNumero">
            Primer Numero: <InputNumber @bind-Value="Operaciones.PrimerNumero" class="form-control"  />
        </p>
        <p class="SegundoNumero">
            Segundo Numero:<InputNumber @bind-Value="Operaciones.SegundoNumero" class="form-control" />
        </p>
        <p class="ResultadosSuma">
            La Suma de los Numeros Es:<InputNumber @bind-Value="Operaciones.ResultadosSuma" class="from-control" readonly="true"  />
        </p>
        <p class="ResultadosResta">
            La Resta de los Numeros Es:<InputNumber @bind-Value="Operaciones.ResultadosResta" class="from-control"  readonly="true"/>



        </p>
        <p class="ResultadosMultiplicacion">
           El Multiplo de los Numeros Es:<InputNumber @bind-Value="Operaciones.ResultadosMultiplicacion" class="from-control"  readonly="true"/>



        </p>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-success" @onclick="Calcular">
            Calcular Operaciones
        </button>
       

    </div>


</EditForm>

